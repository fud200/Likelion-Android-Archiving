<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout1"
        android:background="#B3B1B1"
        android:layout_width="match_parent" android:layout_height="match_parent"
>


    <android.support.constraint.ConstraintLayout

            android:id="@+id/layout2"
            android:layout_width="411dp"
            android:layout_height="50dp"
            android:background="#4167B1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/buttons"
            app:layout_constraintTop_toBottomOf="@+id/layout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    <Button
            android:id="@+id/buttonphoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/picture"
            app:layout_constraintBottom_toBottomOf="@id/layout2"

            tools:layout_editor_absoluteX="0dp" />
    <Button
            android:id="@+id/buttoncafe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cafe"
            app:layout_constraintEnd_toEndOf="@id/layout2"
            app:layout_constraintBottom_toBottomOf="@id/layout2"

            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="364dp"/>
    <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/layout2"
            app:layout_constraintStart_toEndOf="@id/buttonphoto"
            app:layout_constraintEnd_toStartOf="@id/buttoncafe"
            android:background="@drawable/search"


    />
    <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/buttons"
            android:layout_marginTop="8dp"
            android:background="#F8F8F8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/dot"
            app:layout_constraintBottom_toBottomOf="@id/layout4"
            app:layout_constraintStart_toEndOf="@id/layout4"

            android:id="@+id/button"/>
    tools:layout_editor_absoluteY="68dp" tools:layout_editor_absoluteX="278dp"/>
    <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/name2"
            app:layout_constraintTop_toBottomOf="@id/buttons"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteY="114dp"/>
    <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="404dp"
            android:layout_height="186dp"
            android:background="@drawable/pic5"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/layout4"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>
    <Button
            android:id="@+id/like"
            android:layout_width="202dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/line"
            android:background="@drawable/flike"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

    </Button>
    <Button
            android:id="@+id/share"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/line"
            android:background="@drawable/comment"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintHorizontal_bias="0.0">

    </Button>
    <LinearLayout
            android:id="@+id/time2"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_marginTop="8dp"
            android:background="#F8F8F8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <LinearLayout
            android:id="@+id/name2"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_marginTop="8dp"
            android:background="@drawable/name2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/buttondot2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/dot"
            app:layout_constraintBottom_toBottomOf="@id/name2"
            app:layout_constraintStart_toEndOf="@id/layout4"

    />
    <LinearLayout
            android:id="@+id/pic2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/name2"
            android:layout_marginTop="8dp"
            android:background="@drawable/pic3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>